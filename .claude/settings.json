{
  "env": {
    "ENABLE_TOOL_SEARCH": "auto"
  },
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(git:*)",
      "Bash(npm:*)",
      "WebSearch",
      "WebFetch",
      "Write",
      "Edit",
      "mcp__gohighlevel__*"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check if a skill was just created or renamed in .claude/skills/. If so, update the CLAUDE.md routing table to include it. Only update if the skill is new or the name changed."
          }
        ]
      }
    ]
  }
}
